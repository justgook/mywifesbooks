---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BookGrid from '../../components/BookGrid.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const books = await getCollection('books');
  const tagsSet =  new Set(books.flatMap(book => book.data.tags))
  tagsSet.delete("")
  const tags = [...tagsSet]
  return tags.map(tag => ({
    params: { tag },
    props: { tag }
  }));
}

const { tag } = Astro.params;
const allBooks = await getCollection('books').then(books => 
  books.filter(book => book.data.tags.includes(tag))
);

const initialPageSize = 12;
const initialBooks = allBooks.slice(0, initialPageSize);
---

<BaseLayout title={`Тэг "${tag}"`}>
  <h1 class="text-3xl font-bold mb-8">Тэг "{tag}"</h1>
  <BookGrid books={initialBooks} enableInfiniteScroll={true} tag={tag} totalCount={allBooks.length} />
</BaseLayout>
